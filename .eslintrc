{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "standard", 
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "no-unused-vars": 1,
    "standard/object-curly-even-spacing": 1,
    "no-extra-semi": 1,
    "no-mixed-spaces-and-tabs": 1,
    "no-unreachable": 1,
    "no-console": 1,
    "no-useless-escape": 1,
    "no-undef": 1
  }
}
