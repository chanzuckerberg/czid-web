{
  "_meta": {
    "description": "z-score and RPM score count for taxon and pipeline run "
  },
  "priority": 200,
  "version": 1,
  "index_patterns": [
    "scored_taxon_counts-*"
  ],
  "template": {
    "settings": {
      "number_of_shards": 4,
      "number_of_replicas": 1
    },
    "aliases": {
      "scored_taxon_counts": {}
    },
    "mappings": {
      "properties": {
        "is_phage": {
          "type": "integer",
          "null_value": "0"
        },
        "name": {
          "type": "text",
          "index": false
        },
        "common_name": {
          "type": "text",
          "index": false
        },
        "genus_name": {
          "type": "text",
          "index": false
        },
        "pipeline_run_id": {
          "type": "long"
        },
        "superkingdom_taxid": {
          "type": "long",
          "null_value": "0"
        },
        "tax_id": {
          "type": "integer",
          "null_value": "0"
        },
        "tax_level": {
          "type": "long",
          "null_value": "0"
        },
        "genus_taxid": {
          "type": "long",
          "null_value": "0"
        },
        "family_taxid": {
          "type": "long",
          "null_value": "0"
        },
        "background_id": {
          "type": "long",
          "null_value": "0"
        },
        "metric_list": {
          "type": "nested",
          "properties": {
            "zscore": {
              "type": "float"
            },
            "rpm": {
              "type": "float"
            },
            "stdev": {
              "type": "float",
              "null_value": "0"
            },
            "percent_identity": {
              "type": "float",
              "null_value": "0"
            },
            "mean": {
              "type": "float",
              "null_value": "0"
            },
            "mean_mass_normalized": {
              "type": "float",
              "null_value": "0"
            },
            "alignment_length": {
              "type": "float",
              "null_value": "0"
            },
            "counts": {
              "type": "long",
              "null_value": "0"
            },
            "count_type": {
              "type": "keyword",
              "null_value": "NULL"
            },
            "contigs": {
              "type": "long",
              "null_value": "0"
            },
            "e_value": {
              "type": "float",
              "null_value": "0"
            },
            "stdev_mass_normalized": {
              "type": "float",
              "null_value": "0"
            }
          }
        }
      }
    }
  }
}