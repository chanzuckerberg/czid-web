{
  "name": "e2e",
  "version": "1.0.0",
  "author": "CZID Team",
  "license": "ISC",
  "description": "E2E automated tests for CZID",
  "scripts": {
    "pw:staging": "NODE_ENV=staging DEBUG=pw:api npx playwright test --headed -c ./setup/staging.config.ts",
    "pw:local": "NODE_ENV=dev DEBUG=pw:api npx playwright test --headed -c ./setup/local.config.ts",
    "pw:ci": "NODE_ENV=dev DEBUG=pw:api npx playwright test --grep @nologin -c ./setup/ci.config.ts",
    "pw:staging:headless": "NODE_ENV=staging npx playwright test -c ./setup/staging.config.ts",
    "pw:staging:debug": "DEBUG=pw:browser*,pw:api NODE_ENV=staging npx playwright test --headed -c ./setup/staging.config.ts",
    "pw:report": "npx playwright show-report",
    "pw:ci:1": "NODE_ENV=dev DEBUG=pw:api npx playwright test --shard=1/3 -c ./setup/ci.config.ts",
    "pw:ci:2": "NODE_ENV=dev DEBUG=pw:api npx playwright test --shard=2/3 -c ./setup/ci.config.ts",
    "pw:ci:3": "NODE_ENV=dev DEBUG=pw:api npx playwright test --shard=3/3 -c ./setup/ci.config.ts"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@playwright/test": "^1.27.0",
    "@types/lodash": "^4.14.182",
    "lodash": "^4.14.182",
    "dotenv": "^16.0.1",
    "playwright": "^1.27.0",
    "playwright-chromium": "^1.27.0",
    "prettier": "^2.8.2"
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
