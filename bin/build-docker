#!/bin/bash
set -e

export REPO=chanzuckerberg/idseq-web

BRANCH="branch-$1"
COMMIT="sha-$2"
BUILD_NUMBER="build-$3"
COMPOSE_TAG="chanzuckerberg/idseq-web:compose"

echo $BRANCH
echo $COMMIT
echo $REPO
echo $TAG
echo '--'
docker-compose build web

docker tag $COMPOSE_TAG $REPO:$COMMIT
docker tag $COMPOSE_TAG $REPO:$BRANCH
docker tag $COMPOSE_TAG $REPO:$BUILD_NUMBER