#!/usr/bin/env ruby
require 'pathname'
require 'fileutils'
require 'rubygems/version'
include FileUtils

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../', __FILE__)

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

chdir APP_ROOT do
  system! './bin/base-setup'
end
