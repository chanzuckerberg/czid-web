<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @sample.name %>
</p>

<p>
  <strong>Project:</strong>
  <%= @sample.project.name %>
</p>

<p>
  <strong>Date created:</strong>
  <%= @sample.created_at %>
</p>

<p>
  <strong>Pipeline runs:</strong>
</p>

<table class="table table-condensed">
      <thead>
        <tr>
          <th>Remaining reads</th>
          <th>Date created</th>
        </tr>
      </thead>
      <tbody>
        <% @sample.pipeline_outputs.each do |pipeline_output| %>
          <tr>
            <td><%= pipeline_output.remaining_reads %></td>
            <td><%= pipeline_output.created_at %></td>
            <td><%= link_to 'Show', pipeline_output %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<p>
  <%= link_to 'Back', samples_path %>
</p>

