<div id="sample_view">
  <%= javascript_tag do %>
    react_component('SampleView', {
      admin: <%= current_user.admin %>,
      allowedFeatures: JSON.parse('<%= raw escape_json(current_user.allowed_feature_list) %>'),
      csrf: '<%=form_authenticity_token %>',
      gitVersion: '<%=@git_version %>',
      sample: JSON.parse('<%= raw escape_json(@sample) %>'),
      project: JSON.parse('<%= raw escape_json(@project_info) %>'),
      pipelineRun: JSON.parse('<%= raw escape_json(@pipeline_run_display) %>'),
      jobStatistics: JSON.parse('<%= raw escape_json(@job_stats) %>'),
      sampleIdToNameMap: JSON.parse('<%= raw escape_json(@project_sample_ids_names) %>'),
      hostGenome: JSON.parse('<%= raw escape_json(@host_genome) %>'),
      summaryStats: JSON.parse('<%= raw escape_json(@summary_stats) %>'),
      reportPresent: <%= !!@report_present %>,
      reportTime: '<%=@report_ts%>',
      allCategories: JSON.parse('<%= raw escape_json(@all_categories)%>'),
      reportDetails: JSON.parse('<%= raw escape_json(@report_details)%>'),
      reportPageParams: JSON.parse('<%= raw escape_json(@report_page_params) %>'),
      sampleStatus: '<%= @sample_status %>',
      canEdit: <%= @can_edit %>,
      canSeeAlignViz: <%= !!@align_viz %>,
      pipelineVersions: <%= raw escape_json(@pipeline_versions) %>,
      amr: JSON.parse('<%= raw escape_json(@amr_counts) %>'),
      allBackgrounds: JSON.parse('<%= raw escape_json(@background_models) %>')
    }, 'sample_view');
  <% end %>
</div>
