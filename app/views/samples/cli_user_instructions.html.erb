<div id="cli_user_instructions">
  <%= javascript_tag do %>
    react_component('CliUserInstructions', {
    authToken: '<%= current_user.authentication_token %>',
    email: '<%= current_user.email %>',
    hostGenomes: JSON.parse('<%= raw escape_json(
      # See showAsOption and https://jira.czi.team/browse/IDSEQ-2193.
      HostGenome.all.select {|h| h.show_as_option? && !h.ercc_only? }.map(&:name))
    %>')
    }, 'cli_user_instructions');
  <% end %>
</div>
