<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Pipeline output</th>
      <th>Sample</th>
      <th>Project</th>
      <th>Date created</th>
      <th>Background model</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.name %></td>
        <td><%= link_to report.pipeline_output %></td>
        <td><%= link_to report.pipeline_output.sample.name, report.pipeline_output.sample %></td>
        <td><%= link_to report.pipeline_output.sample.project.name, report.pipeline_output.sample.project %></td>
        <td><%= report.created_at %></td>
        <td><%= link_to report.background.name, report.background if report.background %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
<%= link_to 'New Report', new_report_path %> |
<%= link_to 'Front portal', root_path %>
</p>
