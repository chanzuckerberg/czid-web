<% if ENV["DATADOG_CLIENT_TOKEN"] && current_user %>
  <!-- Global site tags for Datadog analytics-->
  <script type="text/javascript" src="https://www.datadoghq-browser-agent.com/datadog-logs-us.js"></script>
  <script>
    // Snippet from https://docs.datadoghq.com/logs/log_collection/javascript/
    // Client Token is designed to be public: https://docs.datadoghq.com/account_management/api-app-keys/#client-tokens

    DD_LOGS.init({
      clientToken: "<%= ENV["DATADOG_CLIENT_TOKEN"] %>",
      forwardErrorsToLogs: true,
    });

    DD_LOGS.addLoggerGlobalContext('browser-env', "<%= Rails.env %>")
  </script>
<% end %>
